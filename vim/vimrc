" Pathogen
execute pathogen#infect()

set number  " show numbers
let t_Co=256

"colorscheme monokai
let g:seoul256_background = 236
colo seoul256
set background=dark

let mapleader=" "
set nocompatible
set term=screen-256color " so the background color isn't fucked
filetype off
syntax on

set rtp+=~/.fzf

" Highlight cursorline
set cursorline
hi CursorLine term=bold cterm=bold guibg=Grey40

" Highlights extrawhitespace
hi ExtraWhitespace ctermbg=red guibg=red guifg=red guibg=red
au CursorMoved * match ExtraWhitespace /\s\+\%#\@<!$/

" cntrl-h highlights all words the cursor is over
nnoremap <C-h> :exe printf('match IncSearch /\V\<%s\>/', escape(expand('<cword>'), '/\')) <Cr>

" Toggle Nerd Tree
nnoremap \ :NERDTreeTabsToggle <Cr>

" fuzzy finder shortcut call
nnoremap <c-t> :call fzf#run({'sink':'tabe'}) <Cr>

" I prefer gr to go back a tab
nnoremap gr gT

" Tabs are 4 spaces
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
set autoindent
set smartindent
filetype on
filetype plugin on
filetype indent on

" spaces under cursor
set scrolloff=10

" autocomplete after tab
set wildmenu

" better search options
set incsearch
set hlsearch
set ignorecase
set smartcase

" show hidden files? (disabled by default)
" let NERDTreeShowHidden=1

" tab labels
let g:taboo_modified_tab_flag="+"
let g:taboo_tab_format=' %N %f %m '

